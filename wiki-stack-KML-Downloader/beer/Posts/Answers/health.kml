		<Instance Id="32" InstanceType="answer">
			<PostId>2145</PostId>
			<ParentPostId>268</ParentPostId>			<Tags>
				<tag>history</tag>
				<tag>health</tag>
			</Tags>
			<Credit> 
				<Score>1</Score>
